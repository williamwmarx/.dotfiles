################################################################################
# Startup
################################################################################
# ------------------------------ Vimify Everything ----------------------------
set -o vi  # Vi mode
bindkey -M vicmd v edit-command-line  # Hitting `v` in escape mode opens command in Vim
export MANPAGER="vim -M +MANPAGER --not-a-term -"

# ----------------------------------- ZSH Rules -------------------------------
source $HOME/.aliases
source $HOME/.functions